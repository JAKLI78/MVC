@model List<MVCTask.Models.UserModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Users</title>
</head>
<body>
<div>
    <ul>
        <li>Users</li>
        <li>@Html.TextBox("serchBox")</li>
        <li>@Html.ActionLink("Find","Find")</li>
        <li>@Html.ActionLink("New user","NewUser")</li>
    </ul>  
    @if (Model.Count > 0)
    {
        <table>
            <thead><tr><th>Name</th><th>Birth Date</th><th>Company</th><th>Actions</th></tr></thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name @item.Surname @item.Title
                                                     
                                                           </td>
                    <td>@Html.DisplayFor(m=>m.Find(i=>i.Id==item.Id).BirthDate)</td>
                    <td>@item.CompanyName</td>
                    <td>@Html.ActionLink("Edit","editUser") @Html.ActionLink("delete","DeleteUser")</td>
                </tr>
            }
        </table>
    }
</div>
</body>
</html>